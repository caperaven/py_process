{
    "id": "window",

    "main": {
        "steps": {
            "start": {
                "type": "perform",
                "action": "navigate",
                "args": {
                    "url": "http://127.0.0.1:8080/web/",
                    "wait": "h1"
                },
                "next_step": "click_on_button"
            },

            "click_on_button": {
                "type": "perform",
                "action": "click",
                "args": {
                    "query": "#btnOpenDialog"
                },
                "next_step": "wait_for_dialog"
            },

            "wait_for_dialog": {
                "type": "wait",
                "action": "window_count",
                "args": {
                    "count": 2
                },
                "next_step": "switch_to_dialog"
            },

            "switch_to_dialog": {
                "type": "perform",
                "action": "switch_to_frame",
                "args": {
                    "index": 1
                },
                "next_step": "close_dialog"
            },

            "close_dialog": {
                "type": "perform",
                "action": "click",
                "args": {
                    "query": "[data-action='login']"
                },
                "next_step": "wait_for_dialog_to_close"
            },

            "wait_for_dialog_to_close": {
                "type": "wait",
                "action": "window_count",
                "args": {
                    "count": 1
                },
                "next_step": "return_to_default"
            },

            "return_to_default": {
                "type": "perform",
                "action": "switch_to_default"
            }
        }
    }
}